{
  "version": "1.0.0-alpha.0",
  "name": "codive",
  "description": "A real-time platform for hosting coding workshops",
  "author": "Madhav Varshney <madhavarshney@gmail.com>",
  "scripts": {
    "start": "parcel src/index.html --open",
    "build": "parcel build src/index.html --no-source-maps --detailed-report",
    "lint": "eslint \"./src/**/*.{js,jsx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "firebase": "^7.13.1",
    "firebaseui": "^4.5.0",
    "firepad": "^1.5.9",
    "github-markdown-css": "^4.0.0",
    "htm": "^3.0.3",
    "hyperapp": "^2.0.4",
    "monaco-editor": "^0.20.0",
    "sanitize.css": "^11.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "eslint": "^6.7.2",
    "eslint-config-babel": "^9.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^1.5.0",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3",
    "typescript-plugin-css-modules": "^2.2.0"
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-jsx-pragmatic",
        {
          "module": "hyperapp",
          "import": "h",
          "export": "h"
        }
      ]
    ]
  }
}
